/* pages/user/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background: #f5f5f7;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: white;
  margin: 20rpx;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.user-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #f2f2f7;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 36rpx;
  color: #1d1d1f;
  font-weight: 600;
  letter-spacing: -0.5rpx;
}

.user-id {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 32rpx;
  border-top: 1rpx solid #f2f2f7;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 600;
}

.stat-label {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}

/* 菜单区域 */
.menu-sections {
  margin: 0 20rpx;
}

.menu-section {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  padding: 32rpx 40rpx 20rpx;
  font-size: 28rpx;
  color: #86868b;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

.menu-list {
  padding: 0 40rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f2f2f7;
  transition: all 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.05), rgba(88, 86, 214, 0.05));
  margin: 0 -40rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.1), rgba(88, 86, 214, 0.1));
  border-radius: 12rpx;
}

.menu-icon image {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.8;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.menu-title {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.menu-subtitle {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}

.menu-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

/* 退出登录区域 */
.logout-section {
  margin: 40rpx 20rpx 20rpx;
}

.logout-button {
  width: 100%;
  background: #ff3b30;
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.logout-button:active {
  background: #d70015;
  transform: scale(0.98);
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 20rpx;
}

.version-info text {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}