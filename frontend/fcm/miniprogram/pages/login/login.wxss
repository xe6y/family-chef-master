/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f7;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.background-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.1), rgba(88, 86, 214, 0.1));
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: 200rpx;
  left: -150rpx;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  top: 50%;
  right: 50rpx;
}

/* 主要内容 */
.main-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 60rpx 40rpx;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-container {
  width: 120rpx;
  height: 120rpx;
  background: white;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.logo {
  width: 80rpx;
  height: 80rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 12rpx;
  letter-spacing: -0.5rpx;
}

.app-subtitle {
  font-size: 28rpx;
  color: #86868b;
  font-weight: 400;
}

/* 欢迎区域 */
.welcome-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.welcome-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 12rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #86868b;
  font-weight: 400;
}

/* 登录区域 */
.login-section {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 60rpx;
}

.login-button {
  position: relative;
  width: 100%;
  height: 96rpx;
  background: transparent;
  border: none;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.button-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
}

.button-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.button-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #007aff, #5856d6);
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.login-button:active .button-background {
  transform: scale(0.98);
  opacity: 0.9;
}

.login-button.loading .button-background {
  opacity: 0.7;
}

/* 协议区域 */
.agreement-section {
  text-align: center;
  font-size: 24rpx;
  line-height: 1.5;
}

.agreement-text {
  color: #86868b;
}

.agreement-link {
  color: #007aff;
  text-decoration: none;
}

.agreement-link:active {
  opacity: 0.7;
}