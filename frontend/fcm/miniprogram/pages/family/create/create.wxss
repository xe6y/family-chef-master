/* pages/family/create/create.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.form {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.required {
  color: #ff3b30;
}

.input, .textarea {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.input:focus, .textarea:focus {
  border-color: #667eea;
  background: #fff;
}

.input.error, .textarea.error {
  border-color: #ff3b30;
}

.textarea {
  height: 120rpx;
  resize: none;
}

.error-text {
  color: #ff3b30;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.avatar-section {
  display: flex;
  justify-content: center;
}

.avatar-preview {
  width: 200rpx;
  height: 200rpx;
  border: 3rpx dashed #ddd;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  transition: all 0.3s ease;
  overflow: hidden;
}

.avatar-preview:active {
  transform: scale(0.95);
  border-color: #667eea;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.camera-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  opacity: 0.6;
}

.footer {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.submit-btn.loading {
  opacity: 0.7;
}

.submit-btn:disabled {
  opacity: 0.5;
}

.skip-btn {
  width: 100%;
  height: 88rpx;
  background: transparent;
  color: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 44rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.skip-btn:active {
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
}