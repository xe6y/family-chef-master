/* 页面整体布局 */
.ingredients-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

/* 搜索栏 */
.search-bar {
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 25rpx;
  padding: 15rpx 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 15rpx;
}

/* 分类标签 */
.category-tabs {
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tabs-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
}

.tab-item {
  display: inline-block;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s;
}

.tab-item.active {
  color: #E9941E;
  border-bottom-color: #E9941E;
  font-weight: 500;
}

/* 食材列表 */
.ingredients-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.ingredient-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.ingredient-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.ingredient-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ingredient-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.ingredient-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.ingredient-meta {
  display: flex;
  gap: 10rpx;
  align-items: center;
}

.category-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  color: #666;
  border-radius: 12rpx;
}

.stock-info {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.stock-info.in-stock {
  background: #e8f5e8;
  color: #52c41a;
}

.stock-info.out-of-stock {
  background: #fff1f0;
  color: #f5222d;
}

.ingredient-action {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 10rpx;
}

.price {
  font-size: 28rpx;
  font-weight: 600;
  color: #E9941E;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-btn {
  background: #E9941E;
  color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

/* 悬浮添加按钮 */
.fab {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: #E9941E;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(233, 148, 30, 0.3);
  z-index: 100;
}

.fab-icon {
  width: 40rpx;
  height: 40rpx;
} 