/* pages/ingredients/list/list.wxss */
.ingredients-page {
  min-height: 100vh;
  background: #f5f5f7;
  padding-bottom: 120rpx;
}

/* 搜索区域 */
.search-section {
  background: white;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #f2f2f7;
}

.search-container {
  display: flex;
  align-items: center;
  background: #f2f2f7;
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  gap: 16rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1d1d1f;
  background: transparent;
}

.clear-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 分类区域 */
.category-section {
  background: white;
  border-bottom: 1rpx solid #f2f2f7;
}

.category-scroll {
  white-space: nowrap;
}

.category-tabs {
  display: flex;
  padding: 0 40rpx;
}

.category-tab {
  display: inline-block;
  padding: 20rpx 32rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #86868b;
  font-weight: 500;
  border-radius: 20rpx;
  background: #f2f2f7;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.category-tab.active {
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.category-tab:last-child {
  margin-right: 0;
}

/* 食材列表 */
.ingredients-list {
  padding: 20rpx;
}

.ingredient-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.ingredient-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.ingredient-image {
  width: 100%;
  height: 200rpx;
  background: #f2f2f7;
}

.ingredient-content {
  padding: 24rpx;
}

.ingredient-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.ingredient-name {
  flex: 1;
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 600;
  line-height: 1.3;
}

.stock-badge {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.stock-badge.in-stock {
  background: #d1e7dd;
  color: #0f5132;
}

.stock-badge.out-of-stock {
  background: #f8d7da;
  color: #721c24;
}

.ingredient-desc {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.ingredient-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.category-tag {
  background: #f2f2f7;
  color: #86868b;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.price-section {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.price {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 600;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: #86868b;
  font-weight: 400;
  margin-bottom: 40rpx;
}

.add-button {
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

/* 悬浮按钮 */
.float-button {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #007aff, #5856d6);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
  transition: all 0.2s ease;
}

.float-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.4);
}

.fab-icon {
  width: 48rpx;
  height: 48rpx;
} 