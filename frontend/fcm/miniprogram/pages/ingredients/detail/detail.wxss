/* 页面整体布局 */
.ingredient-detail {
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 图片区域 */
.image-section {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.ingredient-image {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), transparent);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 40rpx 30rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 24rpx;
  height: 24rpx;
  transform: rotate(180deg);
}

.action-buttons {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 信息区域 */
.info-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.ingredient-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.ingredient-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.price-tag {
  background: #E9941E;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.ingredient-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.meta-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #999;
}

.meta-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.meta-value.in-stock {
  color: #52c41a;
}

.meta-value.out-of-stock {
  color: #f5222d;
}

.description-section {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 营养成分 */
.nutrition-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.nutrition-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.nutrition-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.nutrition-name {
  font-size: 26rpx;
  color: #666;
}

.nutrition-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 存储和使用建议 */
.storage-section,
.usage-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.storage-text,
.usage-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 相关菜谱 */
.recipes-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 120rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.more-link {
  font-size: 26rpx;
  color: #E9941E;
}

.recipes-scroll {
  white-space: nowrap;
}

.recipe-card {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  text-align: center;
}

.recipe-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.recipe-name {
  font-size: 24rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.quantity-label {
  font-size: 28rpx;
  color: #333;
}

.quantity-buttons {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.quantity-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #E9941E;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
}

.quantity-btn.disabled {
  background: #f0f0f0;
  color: #ccc;
}

.quantity-text {
  font-size: 28rpx;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

.action-buttons {
  display: flex;
  gap: 15rpx;
}

.edit-btn,
.delete-btn {
  padding: 15rpx 30rpx;
  border-radius: 25rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
}

.edit-btn {
  background: #E9941E;
  color: #fff;
}

.delete-btn {
  background: #fff;
  color: #f5222d;
  border: 1rpx solid #f5222d;
} 