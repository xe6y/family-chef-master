.create-recipe {
  padding-bottom: 40rpx;
}

.form-section {
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 8rpx;
  height: 32rpx;
  background-color: #FF6B6B;
  border-radius: 4rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-row {
  display: flex;
  margin-bottom: 30rpx;
}

.half {
  flex: 1;
}

.half:first-child {
  margin-right: 20rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.error {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}

.image-upload {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx dashed #ddd;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.camera-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 10rpx;
}

.upload-placeholder text {
  font-size: 24rpx;
  color: #999;
}

.picker {
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker text {
  font-size: 28rpx;
  color: #333;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

.ingredients-list, .steps-list {
  margin-bottom: 20rpx;
}

.ingredient-item, .step-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}

.ingredient-content {
  flex: 1;
  display: flex;
}

.ingredient-name {
  flex: 2;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx 0 0 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.ingredient-amount {
  flex: 1;
  height: 80rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  border-left: none;
  border-right: none;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  text-align: center;
}

.ingredient-unit {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 0 8rpx 8rpx 0;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  text-align: center;
}

.ingredient-delete, .step-delete {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ingredient-delete image, .step-delete image {
  width: 40rpx;
  height: 40rpx;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #FF6B6B;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.step-image-upload {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx dashed #ddd;
}

.step-preview-image {
  width: 100%;
  height: 100%;
}

.step-upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.add-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.add-btn text {
  font-size: 28rpx;
  color: #666;
}

.tags-input {
  display: flex;
  flex-wrap: wrap;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx;
  min-height: 80rpx;
}

.tag {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 6rpx 16rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag text {
  font-size: 24rpx;
  color: #666;
  margin-right: 6rpx;
}

.tag-delete {
  width: 24rpx;
  height: 24rpx;
}

.tag-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  min-width: 200rpx;
}

.checkbox-label {
  display: flex;
  align-items: center;
}

.checkbox-label text {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.submit-area {
  padding: 30rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  background-color: #FF6B6B;
}