.recipe-detail {
  padding-bottom: 120rpx;
}

.recipe-image {
  width: 100%;
  height: 500rpx;
}

.recipe-info {
  padding: 30rpx;
  background-color: #fff;
}

.recipe-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.recipe-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.recipe-actions {
  display: flex;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
}

.action-btn image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

.action-btn text {
  font-size: 22rpx;
  color: #666;
}

.recipe-meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}

.meta-item image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.meta-item text {
  font-size: 24rpx;
  color: #666;
}

.recipe-chef {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
}

.chef-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.chef-info {
  flex: 1;
}

.chef-name {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.chef-title {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.chef-skill {
  padding: 6rpx 16rpx;
  background-color: #FFF0F0;
  border-radius: 20rpx;
}

.chef-skill text {
  font-size: 22rpx;
  color: #FF6B6B;
}

.recipe-tags {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.tag {
  padding: 6rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.recipe-section {
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #fff;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

.section-more {
  display: flex;
  align-items: center;
}

.section-more text {
  font-size: 24rpx;
  color: #999;
}

.arrow-right {
  width: 24rpx;
  height: 24rpx;
  margin-left: 6rpx;
}

.ingredients-list {
  display: flex;
  flex-direction: column;
}

.ingredient-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.ingredient-item:last-child {
  border-bottom: none;
}

.ingredient-name {
  font-size: 28rpx;
  color: #333;
}

.ingredient-amount {
  font-size: 28rpx;
  color: #666;
}

.steps-list {
  display: flex;
  flex-direction: column;
}

.step-item {
  display: flex;
  margin-bottom: 30rpx;
}

.step-item:last-child {
  margin-bottom: 0;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #FF6B6B;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 10rpx;
  display: block;
}

.step-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

.tutorial-link {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.tutorial-link image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.tutorial-link text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.reviews-list {
  display: flex;
  flex-direction: column;
}

.review-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.review-item:last-child {
  border-bottom: none;
}

.reviewer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.review-content {
  flex: 1;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.reviewer-name {
  font-size: 28rpx;
  color: #333;
}

.review-rating {
  display: flex;
}

.review-rating image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 4rpx;
}

.review-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 10rpx;
  display: block;
}

.review-images {
  display: flex;
  margin-bottom: 10rpx;
}

.review-images image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.empty-reviews {
  padding: 40rpx 0;
  text-align: center;
}

.empty-reviews text {
  font-size: 28rpx;
  color: #999;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #FF6B6B;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}