.order-detail {
  padding-bottom: 120rpx;
}

.status-card {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #FF6B6B;
}

.status-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.status-icon image {
  width: 60rpx;
  height: 60rpx;
}

.status-info {
  flex: 1;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
  display: block;
}

.status-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.status-card.pending {
  background-color: #FF9800;
}

.status-card.confirmed {
  background-color: #2196F3;
}

.status-card.cooking {
  background-color: #9C27B0;
}

.status-card.completed {
  background-color: #4CAF50;
}

.status-card.canceled {
  background-color: #999;
}

.info-card, .recipes-card, .remark-card, .review-card {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.recipe-list {
  display: flex;
  flex-direction: column;
}

.recipe-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.recipe-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.recipe-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.recipe-info {
  flex: 1;
}

.recipe-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.recipe-meta {
  display: flex;
  align-items: center;
}

.recipe-cuisine {
  font-size: 24rpx;
  color: #999;
  margin-right: 15rpx;
}

.recipe-skill {
  font-size: 22rpx;
  color: #FF6B6B;
  background-color: #FFF0F0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.recipe-quantity {
  font-size: 30rpx;
  color: #333;
}

.remark-content {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.remark-content text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.review-rating {
  display: flex;
  margin-bottom: 15rpx;
}

.review-rating image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.review-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 15rpx;
  display: block;
}

.review-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.review-images image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.no-review {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.no-review text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.review-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #FF6B6B;
  border-radius: 35rpx;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  margin-left: 20rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 35rpx;
}

.action-btn.cancel {
  color: #666;
  background-color: #f5f5f5;
}

.action-btn.confirm {
  color: #fff;
  background-color: #2196F3;
}

.action-btn.cooking {
  color: #fff;
  background-color: #9C27B0;
}

.action-btn.complete {
  color: #fff;
  background-color: #4CAF50;
}