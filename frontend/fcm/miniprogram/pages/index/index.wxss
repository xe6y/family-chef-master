.home-container {
  padding-bottom: 30rpx;
}

/* 顶部用户信息栏 */
.user-family-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.welcome-text {
  font-size: 28rpx;
  color: #333;
}

.family-selector {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.family-selector text {
  font-size: 26rpx;
  color: #333;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 功能导航 */
.nav-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.nav-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #333;
}

/* 通用区块样式 */
.section {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
}

.section-more text {
  font-size: 24rpx;
  color: #999;
}

.arrow-right {
  width: 24rpx;
  height: 24rpx;
  margin-left: 6rpx;
}

/* 推荐菜谱 */
.recipe-scroll-container {
  width: 100%;
}

.recipe-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.recipe-card {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.recipe-image {
  width: 100%;
  height: 200rpx;
}

.recipe-info {
  padding: 15rpx;
  background-color: #fff;
}

.recipe-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 6rpx;
}

.recipe-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
}

/* 订单列表 */
.order-list {
  padding: 0 30rpx;
}

.order-item {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  color: #FF6B6B;
}

.order-content {
  display: flex;
  flex-direction: column;
}

.order-recipes {
  margin-bottom: 10rpx;
}

.order-recipe {
  font-size: 28rpx;
  color: #333;
  margin-right: 15rpx;
}

.order-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

/* 家宴回忆 */
.memory-list {
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.memory-item {
  width: 48%;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.memory-image {
  width: 100%;
  height: 200rpx;
}

.memory-info {
  padding: 15rpx;
  background-color: #fff;
}

.memory-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 6rpx;
}

.memory-date {
  font-size: 22rpx;
  color: #999;
}

.empty-memory {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}