/* pages/index/index.wxss */
.home-container {
  min-height: 100vh;
  background: #f5f5f7;
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-section {
  background: white;
  padding: 60rpx 40rpx 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #f2f2f7;
}

.user-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.greeting {
  font-size: 28rpx;
  color: #86868b;
  font-weight: 400;
}

.user-name {
  font-size: 36rpx;
  color: #1d1d1f;
  font-weight: 600;
  letter-spacing: -0.5rpx;
}

.user-actions {
  display: flex;
  align-items: center;
}

.notification-btn {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  background: #f2f2f7;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.2s ease;
}

.notification-btn:active {
  background: #e5e5ea;
  transform: scale(0.95);
}

.notification-btn image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
}

.notification-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff3b30;
  color: white;
  font-size: 20rpx;
  font-weight: 600;
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 通用区域样式 */
.section {
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  border-bottom: 1rpx solid #f2f2f7;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.section-title {
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 600;
  letter-spacing: -0.5rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}

.more-button {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: transparent;
  border: none;
  padding: 0;
  font-size: 28rpx;
  color: #007aff;
  font-weight: 500;
  transition: all 0.2s ease;
}

.more-button:active {
  color: #5856d6;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 快捷功能 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 40rpx;
  justify-items: center;
}

.action-card {
  background: #f2f2f7;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  border: none;
  transition: all 0.2s ease;
  text-align: center;
  min-height: 160rpx;
}

.action-card:active {
  background: #e5e5ea;
  transform: scale(0.98);
}

.action-icon {
  font-size: 48rpx;
}

.action-text {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 600;
  text-align: center;
  width: 100%;
}

.action-desc {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
  text-align: center;
  width: 100%;
}

/* 菜单列表 */
.menu-list {
  padding: 40rpx;
}

.menu-item {
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  background: #f2f2f7;
}

.menu-item:last-child {
  margin-bottom: 0;
}

.menu-image {
  width: 100%;
  height: 200rpx;
  background: #f2f2f7;
}

.menu-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
  padding: 40rpx 24rpx 24rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.menu-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.menu-name {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

.menu-time {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  font-weight: 400;
}

.menu-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.menu-btn {
  border: none;
  border-radius: 16rpx;
  padding: 12rpx 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.menu-btn.favorite {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

.menu-btn.favorite image {
  width: 24rpx;
  height: 24rpx;
}

.menu-btn.primary {
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.menu-btn:active {
  transform: scale(0.95);
}

/* 推荐列表 */
.recommendation-list {
  padding: 40rpx;
}

.recommendation-item {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f2f2f7;
  transition: all 0.2s ease;
}

.recommendation-item:last-child {
  border-bottom: none;
}

.recommendation-item:active {
  background: #f2f2f7;
  margin: 0 -40rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.recommendation-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #f2f2f7;
}

.recommendation-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8rpx;
}

.recommendation-name {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 600;
}

.recommendation-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recommendation-chef {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}

.recommendation-rating {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.recommendation-rating image {
  width: 20rpx;
  height: 20rpx;
}

.recommendation-rating text {
  font-size: 24rpx;
  color: #ff9500;
  font-weight: 500;
}

/* 活动列表 */
.activity-list {
  padding: 40rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f2f2f7;
  transition: all 0.2s ease;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-item:active {
  background: #f2f2f7;
  margin: 0 -40rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.activity-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background: #f2f2f7;
}

.activity-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.activity-text {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.activity-time {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}

.activity-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: #f2f2f7;
}

/* 回忆列表 */
.memory-list {
  padding: 40rpx;
}

.memory-item {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f2f2f7;
}

.memory-item:last-child {
  border-bottom: none;
}

.memory-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #f2f2f7;
}

.memory-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 8rpx;
}

.memory-title {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.memory-date {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}

/* 统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 40rpx;
}

.stat-card {
  background: linear-gradient(135deg, rgba(0, 122, 255, 0.1), rgba(88, 86, 214, 0.1));
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  color: #007aff;
  font-weight: 700;
}

.stat-label {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 500;
}

/* 空状态 */
.empty-memory {
  padding: 80rpx 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.empty-subtext {
  font-size: 24rpx;
  color: #86868b;
  font-weight: 400;
}