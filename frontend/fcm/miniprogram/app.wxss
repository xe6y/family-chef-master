/* 按钮样式 */
.btn {
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
  transition: all 0.2s ease;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
}

.btn-danger {
  background-color: #ff4d4f;
  color: #fff;
}

.btn-success {
  background-color: #4CAF50;
  color: #fff;
}

.btn-warning {
  background-color: #FF9800;
  color: #fff;
}

.btn-info {
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.btn-block {
  width: 100%;
  display: block;
}

.btn-sm {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
}

.btn-lg {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 24rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-body {
  padding: 30rpx;
}

.card-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-error {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}

/* 列表样式 */
.list {
  background-color: #fff;
}

.list-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.list-item:last-child {
  border-bottom: none;
}

/* 徽章样式 */
.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  line-height: 1;
}

.badge-primary {
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

.badge-secondary {
  background-color: #f5f5f5;
  color: #666;
}

.badge-danger {
  background-color: #ff4d4f;
  color: #fff;
}

.badge-success {
  background-color: #4CAF50;
  color: #fff;
}

.badge-warning {
  background-color: #FF9800;
  color: #fff;
}

.badge-info {
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.3);
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #f5f5f5;
  margin: 20rpx 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 加载更多 */
.loading-more, .no-more {
  text-align: center;
  padding: 20rpx 0;
}

.loading-more text, .no-more text {
  font-size: 24rpx;
  color: #999;
}